#include <Adafruit_CircuitPlayground.h>


void setup() {
  CircuitPlayground.begin();
}

void loop() {

  /* Syntax: CircuitPlayground.playTone(frequency, duration_ms)
     This means CircuitPlayground.playTone(440, 500) will play 440 Hz (middle A) 
     for 500 milliseconds (half of a second). 

     Try adding some other tones, some frequency suggestions:
     
     C - 262
     D - 294
     E - 330
     G - 392
     A - 440
      
  */
 
    CircuitPlayground.playTone(440, 500);


  
}
